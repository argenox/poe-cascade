{
  "name": "poe-cascade",
  "version": "0.1.28",
  "description": "POE cascade calculator - chain devices, cable losses, and power margin",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:mac": "electron-builder --mac --x64 --arm64",
    "build:mac:unsigned": "CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --mac --x64 --arm64",
    "test": "node --test test/"
  },
  "keywords": ["poe", "cascade", "ethernet", "power"],
  "author": "Argenox Technologies LLC <info@argenox.com>",
  "license": "MIT",
  "copyright": "Copyright (c) 2026 Argenox Technologies LLC. All rights reserved.",
  "build": {
    "appId": "com.poe-cascade.app",
    "productName": "POE Cascade Calculator",
    "directories": {
      "output": "dist"
    },
    "files": ["**/*", "!**/*.md"],
    "publish": null,
    "artifactName": "POE-Cascade-Calculator-${version}-${os}-${arch}.${ext}",
    "win": {
      "target": ["nsis", "portable"],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "build/app_icon.png",
      "category": "Utility"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "build/icon.icns",
      "category": "public.app-category.utilities"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "differentialPackage": false
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  }
}
